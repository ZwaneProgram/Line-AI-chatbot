# ============================
# SERVER CONFIGURATION
# ============================
PORT=3000

# ============================
# GEMINI AI API
# ============================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================
# LINE BOT CREDENTIALS
# ============================
# Get these from: https://developers.line.biz/console/
LINE_CHANNEL_SECRET=your_line_channel_secret_here
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token_here

# ============================
# GOOGLE SHEETS CONFIGURATION
# ============================
# Main Spreadsheet ID (from URL: https://docs.google.com/spreadsheets/d/THIS_IS_THE_ID/edit)
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Sheet GIDs (from URL: gid=THIS_NUMBER when viewing each sheet)
# How to find GID: Open each sheet tab, check the URL parameter "gid="
STUDENTS_GID=0
TEACHERS_GID=188385579
GUEST_TEACHERS_GID=your_guest_teachers_gid
SCHEDULE_GID=your_schedule_gid
SUBJECTS_GID=your_subjects_gid
FAQ_GID=your_faq_gid
ROOMS_GID=your_rooms_gid

# ============================
# RAG CONFIGURATION
# ============================
# Number of top similar results to retrieve for each query
TOP_K=5